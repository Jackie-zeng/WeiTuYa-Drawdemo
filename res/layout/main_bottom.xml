<?xml version="1.0" encoding="UTF-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_bottom"
        android:orientation="horizontal">             
                     
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/penOreraser_linear"
            android:layout_weight="1">	 	
                 	
               <ImageView
            	android:id="@+id/penOreraser"
        	    android:layout_width="23dp"
        		android:layout_height="23dp"    			
        		android:clickable="true"
        		android:src="@drawable/ic_society" />    
        		
        </LinearLayout> 
        	  
         <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/pen_linear"
            android:layout_weight="1">	 
            
             <ImageView
            	android:id="@+id/pen"
        		android:layout_width="23dp"
        		android:layout_height="23dp"         	   			
        		android:clickable="true"
        		android:src="@drawable/ic_paint" 
        		/> 
        		          	              
         </LinearLayout>
         
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/background_linear"
            android:layout_weight="1">	 
                      
        	<ImageView
            	android:id="@+id/backgroundColor"
        		android:layout_width="23dp"
        		android:layout_height="23dp"   	       			
        		android:clickable="true"
        		android:src="@drawable/ic_image" />  
          </LinearLayout>	
          
          	         
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/delete_linear"
            android:layout_weight="1">	 	
              <ImageView
            	android:id="@+id/unDoOrreDo"
        		android:layout_width="23dp"
        		android:layout_height="23dp"     			
        		android:clickable="true"
        		android:src="@drawable/ic_undo"/>
          </LinearLayout>     
          
           <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/chooseColor_linear"
            android:layout_weight="1">	         
             <ImageView
            	android:id="@+id/chooseColor"
        		android:layout_width="23dp"
        		android:layout_height="23dp"        	     	    			
        		android:clickable="true"
        		android:src="@drawable/ic_color"/>    	          
        </LinearLayout>
        	 
    </LinearLayout>     